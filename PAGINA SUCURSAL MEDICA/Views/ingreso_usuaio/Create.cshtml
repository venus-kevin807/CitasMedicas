@model PAGINA_SUCURSAL_MEDICA.Models.ingreso_usuaio

@{
    ViewBag.Title = "Create";
}
<style scoped>
    .container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;

    }
    .form-group {
        margin-bottom: 15px;
    }

    .label {
        display: block;
        margin-bottom: 5px;
    }

    .input {
        width: 100%;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.25);
        font-weight: bold;
    }
    .link {
        color: #007bff;
        text-decoration: none;
    }
</style>

<h2>Ingresar Usuario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.nick_name_ingresar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nick_name_ingresar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nick_name_ingresar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.contrasenia_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.contrasenia_usuario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.contrasenia_usuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <script>
    function redireccionar() {
      window.location.href = 'Agendarcitas.cshtml';
    }
    </script>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Iniciar sesión" onclick="redireccionar()" class="btn btn-default" />
        </div>
    </div>
</div>
}
<hr />
<p>Olvidaste tu contraseña? @Html.ActionLink("Da click aqui","Create","recuperar_contrasenia")</p>
<hr />
<div>
    <p>No tienes cuenta? </p>@Html.ActionLink("Crea tu cuenta", "Create", "creacion_usuario")
</div>
<hr />
@Html.ActionLink("Regresar", "Index", "Home")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
